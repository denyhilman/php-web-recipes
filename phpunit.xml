<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false" backupStaticAttributes="false" syntaxCheck="false">
	<testsuites>
		 <testsuite name="phpTests">
			 <directory suffix="Test.php">tests</directory>
		 </testsuite>
	</testsuites>
	<logging>
		<log type="coverage-html" target="build/coverage" title="phpTests" charset="UTF-8" yui="true" highlight="true" />
		<log type="coverage-clover" target="build/logs/clover.xml" />
		<log type="junit" target="build/logs/phpunit.xml" logIncompleteSkipped="true" />
	</logging>
</phpunit>